---
// Hero - Landing Page Inglês Geral (Ads Campaign)
// Target: Cold leads from Google/Meta Ads
const features = [
  "Aulas de 25 min que cabem na sua agenda",
  "Disponível 24h, 7 dias por semana",
  "Professores certificados TESOL",
  "Sem fidelidade — você fica porque quer"
];

const floatingCards = [
  { value: "24/7", label: "Disponível sempre", delay: "0s" },
  { value: "1:1", label: "Aula individual", delay: "0.8s" },
  { value: "+50.000", label: "Alunos satisfeitos", delay: "1.6s" },
  { value: "TESOL", label: "Certificação internacional", delay: "2.4s" },
];
---

<section class="hero" id="inicio">
  <!-- Background layers -->
  <div class="hero-bg">
    <div class="bg-gradient"></div>
    <div class="bg-orb bg-orb--1"></div>
    <div class="bg-orb bg-orb--2"></div>
    <div class="bg-orb bg-orb--3"></div>
    <div class="bg-mesh"></div>
  </div>

  <div class="container hero-container">
    <div class="hero-grid">
      <!-- Text Column -->
      <div class="hero-content">
        <div class="hero-badge animate-fade-up">
          <span class="badge-dot"></span>
          Experimente Uma Aula
        </div>

        <h1 class="hero-title animate-fade-up delay-1">
          Fale Inglês com<br/>
          <span class="title-accent">Confiança</span>
        </h1>

        <p class="hero-subtitle animate-fade-up delay-2">
          Aulas online ao vivo, 1:1, com professores certificados.
          Flexibilidade total para encaixar na sua rotina.
        </p>

        <ul class="hero-features animate-fade-up delay-3">
          {features.map((feature) => (
            <li class="feature-item">
              <span class="feature-check">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20 6 9 17 4 12"/>
                </svg>
              </span>
              <span class="feature-text">{feature}</span>
            </li>
          ))}
        </ul>

        <div class="hero-cta-group animate-fade-up delay-4">
          <a href="#lead-form" class="hero-cta">
            <span>Quero Experimentar</span>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
          <p class="cta-note">Sua primeira aula é por nossa conta</p>
        </div>
      </div>

      <!-- Visual Column -->
      <div class="hero-visual animate-fade-up delay-2">
        <div class="visual-wrapper">
          <div class="image-frame">
            <img
              src="/images/hero-teacher.webp"
              alt="Professor QQEnglish em aula online ao vivo"
              width="600"
              height="500"
              fetchpriority="high"
              decoding="async"
            />
            <div class="image-shine"></div>
          </div>

          <!-- Floating Cards -->
          {floatingCards.map((card, i) => (
            <div class={`floating-card floating-card--${i + 1}`} style={`--float-delay: ${card.delay}`}>
              <span class="card-value">{card.value}</span>
              <span class="card-label">{card.label}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="scroll-hint animate-fade-in delay-5">
    <div class="scroll-line"></div>
  </div>
</section>

<style>
  /* ===== HERO SECTION ===== */
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: clamp(6rem, 12vh, 8rem) 0 clamp(4rem, 8vh, 6rem);
    overflow: hidden;
  }

  /* Background */
  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .bg-gradient {
    position: absolute;
    inset: 0;
    background:
      linear-gradient(160deg, #ecfeff 0%, #f0fdfa 40%, #f5f3ff08 100%);
  }

  .bg-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    will-change: transform;
  }

  .bg-orb--1 {
    width: clamp(300px, 40vw, 600px);
    height: clamp(300px, 40vw, 600px);
    top: -15%;
    right: -5%;
    background: radial-gradient(circle, rgba(8, 145, 178, 0.12) 0%, transparent 70%);
    animation: drift 20s ease-in-out infinite;
  }

  .bg-orb--2 {
    width: clamp(200px, 30vw, 450px);
    height: clamp(200px, 30vw, 450px);
    bottom: -10%;
    left: -8%;
    background: radial-gradient(circle, rgba(249, 115, 22, 0.08) 0%, transparent 70%);
    animation: drift 25s ease-in-out infinite reverse;
  }

  .bg-orb--3 {
    width: clamp(150px, 20vw, 300px);
    height: clamp(150px, 20vw, 300px);
    top: 40%;
    left: 30%;
    background: radial-gradient(circle, rgba(251, 191, 36, 0.06) 0%, transparent 70%);
    animation: drift 18s ease-in-out infinite 5s;
  }

  .bg-mesh {
    position: absolute;
    inset: 0;
    background-image:
      radial-gradient(circle at 1px 1px, rgba(8, 145, 178, 0.04) 1px, transparent 0);
    background-size: 48px 48px;
  }

  @keyframes drift {
    0%, 100% { transform: translate(0, 0) scale(1); }
    33% { transform: translate(30px, -20px) scale(1.05); }
    66% { transform: translate(-20px, 15px) scale(0.95); }
  }

  /* Container */
  .hero-container {
    position: relative;
    z-index: 1;
  }

  .hero-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: center;
  }

  @media (min-width: 1024px) {
    .hero-grid {
      grid-template-columns: 1fr 1fr;
      gap: clamp(3rem, 5vw, 6rem);
    }
  }

  /* ===== TEXT CONTENT ===== */
  .hero-content {
    max-width: 560px;
  }

  @media (min-width: 1024px) {
    .hero-content {
      max-width: none;
    }
  }

  /* Badge */
  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1.25rem 0.5rem 0.875rem;
    background: linear-gradient(135deg, rgba(251, 191, 36, 0.15) 0%, rgba(251, 191, 36, 0.08) 100%);
    border: 1px solid rgba(251, 191, 36, 0.3);
    border-radius: var(--radius-full);
    font-family: var(--font-body);
    font-size: 0.8125rem;
    font-weight: 600;
    color: #92400e;
    letter-spacing: 0.02em;
    margin-bottom: 1.5rem;
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    background: #f59e0b;
    border-radius: 50%;
    animation: pulse-dot 2s ease-in-out infinite;
  }

  @keyframes pulse-dot {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(0.8); }
  }

  /* Title */
  .hero-title {
    font-family: var(--font-display);
    font-size: clamp(2.25rem, 5vw, 3.5rem);
    font-weight: 700;
    line-height: 1.1;
    color: var(--color-dark);
    margin-bottom: 1.25rem;
    letter-spacing: -0.03em;
  }

  .title-accent {
    position: relative;
    display: inline-block;
    background: linear-gradient(135deg, var(--color-primary) 0%, #06b6d4 50%, var(--color-accent) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .title-accent::after {
    content: '';
    position: absolute;
    bottom: 2px;
    left: 0;
    width: 100%;
    height: 6px;
    background: linear-gradient(90deg, rgba(8, 145, 178, 0.2) 0%, rgba(249, 115, 22, 0.2) 100%);
    border-radius: 3px;
    z-index: -1;
  }

  /* Subtitle */
  .hero-subtitle {
    font-size: clamp(1rem, 1.5vw, 1.125rem);
    line-height: 1.7;
    color: var(--color-gray-600);
    margin-bottom: 2rem;
    max-width: 480px;
  }

  /* Features */
  .hero-features {
    list-style: none;
    margin-bottom: 2.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.875rem;
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .feature-check {
    flex-shrink: 0;
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-primary) 0%, #0e7490 100%);
    border-radius: 50%;
    color: white;
    box-shadow: 0 2px 8px rgba(8, 145, 178, 0.25);
  }

  .feature-text {
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-gray-700);
  }

  /* CTA Group */
  .hero-cta-group {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .hero-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.625rem;
    padding: 1.125rem 2.25rem;
    background: linear-gradient(135deg, var(--color-lp-cta) 0%, #ea580c 100%);
    color: white;
    font-family: var(--font-body);
    font-size: 1.0625rem;
    font-weight: 700;
    border-radius: var(--radius-full);
    text-decoration: none;
    transition: all var(--transition-base);
    box-shadow:
      0 4px 16px rgba(249, 115, 22, 0.35),
      0 0 0 0 rgba(249, 115, 22, 0);
    animation: cta-glow 3s ease-in-out infinite 2s;
  }

  .hero-cta:hover {
    transform: translateY(-3px);
    box-shadow:
      0 8px 28px rgba(249, 115, 22, 0.45),
      0 0 0 0 rgba(249, 115, 22, 0);
    animation: none;
  }

  .hero-cta:active {
    transform: translateY(-1px);
  }

  .hero-cta svg {
    transition: transform var(--transition-fast);
  }

  .hero-cta:hover svg {
    transform: translateX(4px);
  }

  @keyframes cta-glow {
    0%, 100% {
      box-shadow:
        0 4px 16px rgba(249, 115, 22, 0.35),
        0 0 0 0 rgba(249, 115, 22, 0.2);
    }
    50% {
      box-shadow:
        0 4px 16px rgba(249, 115, 22, 0.35),
        0 0 0 12px rgba(249, 115, 22, 0);
    }
  }

  .cta-note {
    font-size: 0.8125rem;
    color: var(--color-gray-500);
    padding-left: 0.5rem;
  }

  /* ===== VISUAL COLUMN ===== */
  .hero-visual {
    position: relative;
    display: flex;
    justify-content: center;
  }

  .visual-wrapper {
    position: relative;
    width: 100%;
    max-width: 520px;
  }

  /* Image Frame */
  .image-frame {
    position: relative;
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow:
      0 20px 60px rgba(8, 145, 178, 0.15),
      0 4px 16px rgba(0, 0, 0, 0.08);
    border: 3px solid rgba(255, 255, 255, 0.8);
  }

  .image-frame img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .image-shine {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.15) 0%,
      transparent 50%,
      transparent 100%
    );
    pointer-events: none;
  }

  /* Floating Cards */
  .floating-card {
    position: absolute;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.125rem;
    padding: 0.75rem 1rem;
    background: white;
    border-radius: var(--radius-md);
    box-shadow:
      0 8px 32px rgba(0, 0, 0, 0.1),
      0 2px 8px rgba(0, 0, 0, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.9);
    animation: card-float 6s ease-in-out infinite;
    animation-delay: var(--float-delay);
    z-index: 2;
  }

  .card-value {
    font-family: var(--font-display);
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-primary);
    line-height: 1.2;
  }

  .card-label {
    font-size: 0.6875rem;
    font-weight: 500;
    color: var(--color-gray-500);
    white-space: nowrap;
  }

  /* Card Positions — all on the left */
  .floating-card--1 {
    top: 2%;
    left: -8%;
  }

  .floating-card--2 {
    top: 28%;
    left: -12%;
  }

  .floating-card--3 {
    bottom: 28%;
    left: -8%;
  }

  .floating-card--4 {
    bottom: 4%;
    left: -12%;
  }

  @keyframes card-float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  /* Scroll Indicator */
  .scroll-hint {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .scroll-line {
    width: 2px;
    height: 40px;
    background: linear-gradient(to bottom, var(--color-primary), transparent);
    border-radius: 1px;
    animation: scroll-pulse 2s ease-in-out infinite;
  }

  @keyframes scroll-pulse {
    0%, 100% { opacity: 0.3; transform: scaleY(1); }
    50% { opacity: 0.8; transform: scaleY(0.6); }
  }

  /* ===== RESPONSIVE ===== */
  @media (max-width: 1023px) {
    .hero {
      min-height: auto;
      padding: clamp(5rem, 10vh, 7rem) 0 3rem;
    }

    .hero-content {
      text-align: center;
      margin: 0 auto;
    }

    .hero-subtitle {
      margin-left: auto;
      margin-right: auto;
    }

    .hero-features {
      align-items: center;
    }

    .hero-cta-group {
      align-items: center;
    }

    .visual-wrapper {
      max-width: 400px;
    }
  }

  @media (max-width: 640px) {
    .hero {
      padding-top: 5rem;
    }

    .hero-badge {
      font-size: 0.75rem;
    }

    .floating-card {
      padding: 0.5rem 0.75rem;
    }

    .card-value {
      font-size: 0.9375rem;
    }

    .card-label {
      font-size: 0.625rem;
    }

    .floating-card--1 { left: -2%; top: 0%; }
    .floating-card--2 { left: -4%; top: 26%; }
    .floating-card--3 { left: -2%; bottom: 22%; }
    .floating-card--4 { left: -4%; bottom: 2%; }

    .scroll-hint {
      display: none;
    }
  }
</style>
