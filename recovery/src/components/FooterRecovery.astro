<style>
  .footer {
    background: linear-gradient(180deg, #0f1729 0%, var(--color-dark) 100%);
    padding: 4rem 0 2rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2.5rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  }

  @media (min-width: 640px) {
    .footer-content {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .footer-content {
      grid-template-columns: 2fr 1fr 1fr 1fr;
    }
  }

  /* Brand Section */
  .footer-brand {
    max-width: 280px;
  }

  .footer-logo-link {
    display: inline-block;
    transition: opacity var(--transition-fast);
  }

  .footer-logo-link:hover {
    opacity: 0.8;
  }

  .footer-logo {
    height: 44px;
    width: auto;
  }

  .footer-tagline {
    font-family: var(--font-body);
    font-size: 0.6875rem;
    font-weight: 600;
    color: var(--color-recovery-cta);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-top: 0.75rem;
  }

  .footer-description {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.5);
    line-height: 1.6;
    margin-top: 1rem;
  }

  /* Navigation */
  .footer-nav-title {
    font-family: var(--font-display);
    font-size: 0.8125rem;
    font-weight: 600;
    color: white;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1.25rem;
  }

  .footer-links {
    display: flex;
    flex-direction: column;
    gap: 0.875rem;
  }

  .footer-links a {
    font-size: 0.9375rem;
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .footer-links a:hover {
    color: white;
  }

  /* Social */
  .footer-social {
    display: flex;
    gap: 0.75rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border-radius: var(--radius-md);
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.08);
    color: rgba(255, 255, 255, 0.6);
    transition: all var(--transition-fast);
  }

  .social-link:hover {
    background: var(--color-recovery-cta);
    border-color: var(--color-recovery-cta);
    color: white;
    transform: translateY(-2px);
  }

  /* Bottom Bar */
  .footer-bottom {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding-top: 2rem;
    text-align: center;
  }

  @media (min-width: 768px) {
    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
    }
  }

  .footer-copyright {
    font-size: 0.8125rem;
    color: rgba(255, 255, 255, 0.4);
  }

  .footer-badges {
    display: flex;
    gap: 0.75rem;
  }

  .badge {
    padding: 0.375rem 0.75rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: var(--radius-sm);
    font-size: 0.6875rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.5);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
</style>
