---
// Kids App section - showcasing the app features
const features = [
  {
    icon: "game",
    title: "Jogos Educativos",
    description: "Jogos divertidos com recompensas que incentivam a prática"
  },
  {
    icon: "book",
    title: "Audiobooks Infantis",
    description: "Histórias em inglês com áudio nativo para treinar o ouvido"
  },
  {
    icon: "chart",
    title: "Progresso para Pais",
    description: "Acompanhe a evolução do seu filho em tempo real"
  },
  {
    icon: "devices",
    title: "Multiplataforma",
    description: "Disponível para iOS, Android e navegador web"
  }
];
---

<section class="kids-app">
  <div class="container">
    <div class="app-grid">
      <!-- Content -->
      <div class="app-content reveal">
        <span class="section-eyebrow">Aplicativo</span>
        <h2 class="section-title">
          Pratique em qualquer lugar
          <span class="title-accent">com o aplicativo</span>
        </h2>
        <p class="section-description">
          O app QQEnglish oferece jogos educativos e atividades interativas para seu filho praticar inglês entre as aulas.
        </p>

        <ul class="features-list">
          {features.map(feature => (
            <li class="feature-item">
              <div class="feature-icon">
                {feature.icon === "game" && (
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="6" y1="11" x2="10" y2="11"/>
                    <line x1="8" y1="9" x2="8" y2="13"/>
                    <line x1="15" y1="12" x2="15.01" y2="12"/>
                    <line x1="18" y1="10" x2="18.01" y2="10"/>
                    <path d="M17.32 5H6.68a4 4 0 0 0-3.978 3.59c-.006.052-.01.101-.017.152C2.604 9.416 2 14.456 2 16a3 3 0 0 0 3 3c1 0 1.5-.5 2-1l1.414-1.414A2 2 0 0 1 9.828 16h4.344a2 2 0 0 1 1.414.586L17 18c.5.5 1 1 2 1a3 3 0 0 0 3-3c0-1.545-.604-6.584-.685-7.258-.007-.05-.011-.1-.017-.151A4 4 0 0 0 17.32 5z"/>
                  </svg>
                )}
                {feature.icon === "book" && (
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
                    <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
                    <circle cx="10" cy="8" r="2"/>
                    <path d="M16 13H8"/>
                    <path d="M16 17H8"/>
                  </svg>
                )}
                {feature.icon === "chart" && (
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="18" y1="20" x2="18" y2="10"/>
                    <line x1="12" y1="20" x2="12" y2="4"/>
                    <line x1="6" y1="20" x2="6" y2="14"/>
                  </svg>
                )}
                {feature.icon === "devices" && (
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="5" y="2" width="14" height="20" rx="2" ry="2"/>
                    <line x1="12" y1="18" x2="12.01" y2="18"/>
                  </svg>
                )}
              </div>
              <div class="feature-text">
                <h3>{feature.title}</h3>
                <p>{feature.description}</p>
              </div>
            </li>
          ))}
        </ul>

        <a href="#lead-form" class="app-cta">
          <span>Quero conhecer o método</span>
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>

      <!-- App Visual -->
      <div class="app-visual reveal">
        <div class="visual-container">
          <img
            src="/images/kids-app-spread.webp"
            alt="Aplicativo QQEnglish Kids em dispositivos móveis"
            class="app-image"
            loading="lazy"
            width="550"
            height="400"
          />
          <div class="visual-glow"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Background -->
  <div class="bg-elements">
    <div class="bg-gradient"></div>
  </div>
</section>

<style>
  .kids-app {
    position: relative;
    padding: var(--section-padding) 0;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    overflow: hidden;
  }

  /* Background */
  .bg-elements {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 0;
  }

  .bg-gradient {
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 20% 80%, rgba(255, 198, 41, 0.15) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.05) 0%, transparent 50%);
  }

  .container {
    position: relative;
    z-index: 1;
  }

  /* Grid */
  .app-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: center;
  }

  @media (min-width: 1024px) {
    .app-grid {
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
    }
  }

  /* Content */
  .app-content {
    text-align: center;
  }

  @media (min-width: 1024px) {
    .app-content {
      text-align: left;
    }
  }

  .section-eyebrow {
    display: inline-block;
    font-family: var(--font-body);
    font-size: 0.8125rem;
    font-weight: 600;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
  }

  .section-title {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    color: white;
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  .title-accent {
    color: var(--color-accent);
  }

  .section-description {
    font-family: var(--font-body);
    font-size: 1.0625rem;
    color: rgba(255, 255, 255, 0.85);
    line-height: 1.7;
    margin-bottom: 2rem;
    max-width: 500px;
  }

  @media (min-width: 1024px) {
    .section-description {
      margin-left: 0;
    }
  }

  @media (max-width: 1023px) {
    .section-description {
      margin-left: auto;
      margin-right: auto;
    }
  }

  /* Features List */
  .features-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    margin-bottom: 2rem;
  }

  @media (max-width: 1023px) {
    .features-list {
      max-width: 400px;
      margin-left: auto;
      margin-right: auto;
    }
  }

  .feature-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.08);
    border-radius: var(--radius-lg);
    transition: all var(--transition-fast);
  }

  .feature-item:hover {
    background: rgba(255, 255, 255, 0.12);
    transform: translateX(4px);
  }

  .feature-icon {
    width: 44px;
    height: 44px;
    background: var(--color-accent);
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .feature-icon svg {
    width: 22px;
    height: 22px;
    color: var(--color-dark);
  }

  .feature-text {
    flex: 1;
    text-align: left;
  }

  .feature-text h3 {
    font-family: var(--font-body);
    font-size: 1rem;
    font-weight: 600;
    color: white;
    margin-bottom: 0.25rem;
  }

  .feature-text p {
    font-family: var(--font-body);
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.5;
  }

  /* CTA */
  .app-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    font-family: var(--font-body);
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-dark);
    background: var(--color-accent);
    border-radius: var(--radius-full);
    text-decoration: none;
    box-shadow: 0 4px 16px rgba(255, 198, 41, 0.3);
    transition: all var(--transition-fast);
  }

  .app-cta:hover {
    background: var(--color-accent-dark);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(255, 198, 41, 0.4);
  }

  .app-cta svg {
    transition: transform var(--transition-fast);
  }

  .app-cta:hover svg {
    transform: translateX(4px);
  }

  /* Visual */
  .app-visual {
    display: flex;
    justify-content: center;
  }

  .visual-container {
    position: relative;
    max-width: 550px;
  }

  .app-image {
    width: 100%;
    height: auto;
    display: block;
    border-radius: var(--radius-xl);
    box-shadow: 0 25px 60px -12px rgba(0, 0, 0, 0.4);
  }

  .visual-glow {
    position: absolute;
    inset: 20px;
    background: var(--color-accent);
    border-radius: var(--radius-xl);
    z-index: -1;
    filter: blur(60px);
    opacity: 0.2;
  }

  /* Reveal animation */
  .reveal {
    opacity: 0;
    transform: translateY(30px);
  }

  .reveal.is-visible {
    animation: reveal 0.8s var(--ease-out-expo) forwards;
  }

  .app-visual.reveal.is-visible {
    animation-delay: 0.15s;
  }

  @keyframes reveal {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('is-visible');
      }
    });
  }, observerOptions);

  document.querySelectorAll('.kids-app .reveal').forEach(el => {
    observer.observe(el);
  });
</script>
