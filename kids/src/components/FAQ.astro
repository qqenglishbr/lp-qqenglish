  </div>
</section>

<style>
  .faq {
    position: relative;
    padding: var(--section-padding) 0;
    background: var(--color-gray-50);
    overflow: hidden;
  }

  .bg-elements {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 0;
  }

  .bg-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, white 0%, transparent 10%, transparent 90%, white 100%);
  }

  .container {
    position: relative;
    z-index: 1;
  }

  /* Section Header */
  .section-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 4rem;
  }

  .section-eyebrow {
    display: inline-block;
    font-family: var(--font-body);
    font-size: 0.8125rem;
    font-weight: 600;
    color: var(--color-kids-accent);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
  }

  .section-title {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    color: var(--color-dark);
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  .title-accent {
    color: var(--color-kids-accent);
  }

  .section-description {
    font-family: var(--font-body);
    font-size: 1.0625rem;
    color: var(--color-gray-600);
    line-height: 1.7;
  }

  /* FAQ List */
  .faq-list {
    max-width: 800px;
    margin: 0 auto 3rem;
  }

  .faq-item {
    background: white;
    border-radius: var(--radius-lg);
    margin-bottom: 1rem;
    box-shadow: var(--shadow-sm);
    overflow: hidden;
  }

  .faq-question {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem 1.5rem;
    cursor: pointer;
    list-style: none;
    user-select: none;
  }

  .faq-question::-webkit-details-marker {
    display: none;
  }

  .question-number {
    font-family: var(--font-display);
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--color-kids-accent);
    min-width: 28px;
  }

  .question-text {
    flex: 1;
    font-family: var(--font-body);
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-dark);
    line-height: 1.4;
  }

  .question-icon {
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-gray-400);
    transition: all var(--transition-base);
  }

  .question-icon svg {
    width: 16px;
    height: 16px;
  }

  .faq-item[open] .question-icon {
    color: var(--color-kids-accent);
  }

  .faq-item[open] .question-icon svg line:first-child {
    opacity: 0;
  }

  .faq-item[open] .question-icon {
    transform: rotate(90deg);
  }

  .faq-answer {
    padding: 0 1.5rem 1.5rem;
    padding-left: calc(1.5rem + 28px + 1rem);
  }

  .faq-answer p {
    font-family: var(--font-body);
    font-size: 0.9375rem;
    color: var(--color-gray-600);
    line-height: 1.7;
  }

  /* Animation for answer */
  .faq-item[open] .faq-answer {
    animation: slideDown 0.3s ease-out;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* CTA Section */
  .faq-cta {
    text-align: center;
    background: white;
    border-radius: var(--radius-xl);
    padding: 2.5rem;
    box-shadow: var(--shadow-md);
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-text {
    font-family: var(--font-body);
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-dark);
    margin-bottom: 1.5rem;
  }

  .cta-buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }

  @media (min-width: 480px) {
    .cta-buttons {
      flex-direction: row;
      justify-content: center;
    }
  }

  .cta-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    font-family: var(--font-body);
    font-size: 0.9375rem;
    font-weight: 600;
    color: white;
    background: var(--color-kids-accent);
    border-radius: var(--radius-full);
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .cta-primary:hover {
    background: var(--color-kids-accent-dark);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px var(--color-kids-accent-glow);
  }

  .cta-primary svg {
    transition: transform var(--transition-fast);
  }

  .cta-primary:hover svg {
    transform: translateX(4px);
  }

  .cta-whatsapp {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    font-family: var(--font-body);
    font-size: 0.9375rem;
    font-weight: 600;
    color: #25d366;
    background: #dcfce7;
    border-radius: var(--radius-full);
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .cta-whatsapp:hover {
    background: #bbf7d0;
    transform: translateY(-2px);
  }

  /* Reveal animation */
  .reveal {
    opacity: 0;
    transform: translateY(30px);
  }

  .reveal.is-visible {
    animation: reveal 0.8s var(--ease-out-expo) forwards;
    animation-delay: var(--delay, 0s);
  }

  @keyframes reveal {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('is-visible');
      }
    });
  }, observerOptions);

  document.querySelectorAll('.faq .reveal').forEach(el => {
    observer.observe(el);
  });
</script>
