---
// How It Works - Kids learning journey in 6 steps
const steps = [
  {
    number: "01",
    title: "Aquecimento Divertido",
    description: "A aula começa com jogos e músicas para deixar a criança confortável e animada.",
    highlight: "Criança engajada desde o início",
    color: "orange"
  },
  {
    number: "02",
    title: "Revisão Lúdica",
    description: "O professor revisa o vocabulário anterior através de jogos e brincadeiras interativas.",
    highlight: "Aprendizado que fica na memória",
    color: "purple"
  },
  {
    number: "03",
    title: "Novo Vocabulário",
    description: "Palavras novas são apresentadas com imagens coloridas, gestos e repetição divertida.",
    highlight: "Contexto visual e auditivo",
    color: "blue"
  },
  {
    number: "04",
    title: "Prática Interativa",
    description: "A criança pratica o vocabulário com jogos de perguntas e respostas rápidas.",
    highlight: "Confiança para falar inglês",
    color: "green"
  },
  {
    number: "05",
    title: "Historinhas e Teatro",
    description: "Histórias simples em inglês onde a criança participa e interage com o professor.",
    highlight: "Imaginação e criatividade",
    color: "pink"
  },
  {
    number: "06",
    title: "Encerramento com Missão",
    description: "A aula termina com uma pequena missão para praticar em casa até a próxima aula.",
    highlight: "Continuidade do aprendizado",
    color: "teal"
  }
];
---

<section class="how-it-works">
  <div class="container">
    <!-- Section Header -->
    <div class="section-header">
      <span class="section-eyebrow">A Jornada</span>
      <h2 class="section-title">
        A jornada de aprendizado
        <span class="title-accent">do seu filho</span>
      </h2>
      <p class="section-description">
        Cada aula segue uma estrutura pensada para crianças, com atividades que mantêm o engajamento.
      </p>
    </div>

    <!-- Steps Grid -->
    <div class="steps-grid">
      {steps.map((step, index) => (
        <div class={`step-card reveal step-${step.color}`} style={`--delay: ${index * 0.1}s`}>
          <div class="step-number">
            <span>{step.number}</span>
          </div>
          <div class="step-content">
            <h3 class="step-title">{step.title}</h3>
            <p class="step-description">{step.description}</p>
            <div class="step-highlight">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"/>
              </svg>
              <span>{step.highlight}</span>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- CTA -->
    <div class="section-cta">
      <a href="#lead-form" class="cta-button">
        <span>Quero uma aula grátis para meu filho</span>
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </div>

  <!-- Background decoration -->
  <div class="bg-elements">
    <div class="bg-gradient"></div>
  </div>
</section>

<style>
  .how-it-works {
    position: relative;
    padding: var(--section-padding) 0;
    background: var(--color-gray-50);
    overflow: hidden;
  }

  /* Background */
  .bg-elements {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 0;
  }

  .bg-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, white 0%, transparent 10%, transparent 90%, white 100%);
  }

  .container {
    position: relative;
    z-index: 1;
  }

  /* Section Header */
  .section-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 4rem;
  }

  .section-eyebrow {
    display: inline-block;
    font-family: var(--font-body);
    font-size: 0.8125rem;
    font-weight: 600;
    color: var(--color-kids-accent);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
  }

  .section-title {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    color: var(--color-dark);
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  .title-accent {
    color: var(--color-kids-accent);
  }

  .section-description {
    font-family: var(--font-body);
    font-size: 1.0625rem;
    color: var(--color-gray-600);
    line-height: 1.7;
  }

  /* Steps Grid */
  .steps-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .steps-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .steps-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }
  }

  /* Step Card */
  .step-card {
    background: white;
    border-radius: var(--radius-xl);
    padding: 2rem;
    box-shadow: var(--shadow-md);
    transition: all var(--transition-base);
    position: relative;
  }

  .step-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  /* Step Number */
  .step-number {
    width: 48px;
    height: 48px;
    border-radius: var(--radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.25rem;
    background: var(--step-bg);
    position: relative;
  }

  .step-number::after {
    content: '';
    position: absolute;
    inset: -4px;
    border-radius: var(--radius-full);
    border: 2px solid var(--step-color);
    opacity: 0.3;
    animation: pulse-ring 2s ease-in-out infinite;
  }

  .step-number span {
    font-family: var(--font-display);
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--step-color);
  }

  /* Color Variants */
  .step-orange {
    --step-bg: #ffedd5;
    --step-color: var(--color-kids-accent);
  }

  .step-purple {
    --step-bg: #f3e8ff;
    --step-color: var(--kids-purple);
  }

  .step-blue {
    --step-bg: var(--color-primary-subtle);
    --step-color: var(--color-primary);
  }

  .step-green {
    --step-bg: #dcfce7;
    --step-color: var(--kids-green);
  }

  .step-pink {
    --step-bg: #fce7f3;
    --step-color: var(--kids-pink);
  }

  .step-teal {
    --step-bg: #ccfbf1;
    --step-color: var(--kids-teal);
  }

  /* Step Content */
  .step-content {
    flex: 1;
  }

  .step-title {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-dark);
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }

  .step-description {
    font-family: var(--font-body);
    font-size: 0.9375rem;
    color: var(--color-gray-600);
    line-height: 1.7;
    margin-bottom: 1rem;
  }

  /* Step Highlight */
  .step-highlight {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.875rem;
    background: var(--step-bg);
    border-radius: var(--radius-full);
    font-family: var(--font-body);
    font-size: 0.8125rem;
    font-weight: 600;
    color: var(--step-color);
  }

  .step-highlight svg {
    width: 14px;
    height: 14px;
  }

  /* CTA */
  .section-cta {
    text-align: center;
    margin-top: 3rem;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    font-family: var(--font-body);
    font-size: 1rem;
    font-weight: 600;
    color: white;
    background: var(--color-kids-accent);
    border-radius: var(--radius-full);
    text-decoration: none;
    box-shadow: 0 4px 16px var(--color-kids-accent-glow);
    transition: all var(--transition-fast);
  }

  .cta-button:hover {
    background: var(--color-kids-accent-dark);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px var(--color-kids-accent-glow);
  }

  .cta-button svg {
    transition: transform var(--transition-fast);
  }

  .cta-button:hover svg {
    transform: translateX(4px);
  }

  /* Animations */
  @keyframes pulse-ring {
    0%, 100% { transform: scale(1); opacity: 0.3; }
    50% { transform: scale(1.05); opacity: 0.15; }
  }

  /* Reveal animation */
  .reveal {
    opacity: 0;
    transform: translateY(30px);
  }

  .reveal.is-visible {
    animation: reveal 0.8s var(--ease-out-expo) forwards;
    animation-delay: var(--delay);
  }

  @keyframes reveal {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('is-visible');
      }
    });
  }, observerOptions);

  document.querySelectorAll('.how-it-works .reveal').forEach(el => {
    observer.observe(el);
  });
</script>
