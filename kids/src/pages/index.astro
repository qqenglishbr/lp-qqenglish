---
import Layout from '../layouts/Layout.astro';
import Header from '../../../shared/src/components/Header.astro';
import Footer from '../../../shared/src/components/Footer.astro';
import Hero from '../components/Hero.astro';
import MethodExplainer from '../components/MethodExplainer.astro';
import WhyQQKids from '../components/WhyQQKids.astro';
import HowItWorks from '../components/HowItWorks.astro';
import SmartKidsBooks from '../components/SmartKidsBooks.astro';
import Testimonials from '../components/Testimonials.astro';
import LeadForm from '../components/LeadForm.astro';
import FAQ from '../components/FAQ.astro';
import Partners from '../components/Partners.astro';

const title = "QQEnglish Kids - Inglês Online para Crianças";
const description = "Aulas de inglês online para crianças a partir de 3 anos. Professores especializados em ensino infantil. Metodologia lúdica com jogos e histórias. Agende uma aula experimental gratuita!";
---

<Layout title={title} description={description}>
  <Header />
  <main>
    <Hero />
    <MethodExplainer />
    <WhyQQKids />
    <HowItWorks />
    <SmartKidsBooks />
    <Testimonials />
    <LeadForm />
    <FAQ />
    <Partners />
  </main>
  <Footer />
</Layout>
