---
// Premium Why QQEnglish section with elegant cards
interface Feature {
  icon: string;
  title: string;
  description: string;
  accent: string;
}

const features: Feature[] = [
  {
    icon: "users",
    title: "Professores Profissionais",
    description: "Escolha entre mais de 1.300 professores certificados TESOL. A diferença na qualidade do ensino é imediata.",
    accent: "blue"
  },
  {
    icon: "user",
    title: "Aulas Individuais",
    description: "Todas as aulas são 1:1, garantindo atenção total do professor durante toda a sessão.",
    accent: "purple"
  },
  {
    icon: "headphones",
    title: "Suporte Dedicado",
    description: "Nossa equipe de suporte está disponível para ajudá-lo durante todo o processo de aprendizado.",
    accent: "teal"
  },
  {
    icon: "clock",
    title: "A Qualquer Hora",
    description: "Aprenda inglês 24/7. Escolha suas aulas no horário mais conveniente para você.",
    accent: "orange"
  },
  {
    icon: "heart",
    title: "Todas as Idades",
    description: "Cursos adequados para todas as faixas etárias. A aula perfeita para seu nível de inglês.",
    accent: "pink"
  },
  {
    icon: "globe",
    title: "Em Qualquer Lugar",
    description: "Aulas online de qualquer lugar do mundo. Basta ter uma conexão com a internet.",
    accent: "green"
  }
];

const icons: Record<string, string> = {
  users: `<path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/>`,
  user: `<path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/>`,
  headphones: `<path d="M3 18v-6a9 9 0 0 1 18 0v6"/><path d="M21 19a2 2 0 0 1-2 2h-1a2 2 0 0 1-2-2v-3a2 2 0 0 1 2-2h3zM3 19a2 2 0 0 0 2 2h1a2 2 0 0 0 2-2v-3a2 2 0 0 0-2-2H3z"/>`,
  clock: `<circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/>`,
  heart: `<path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>`,
  globe: `<circle cx="12" cy="12" r="10"/><line x1="2" y1="12" x2="22" y2="12"/><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>`
};

const accentColors: Record<string, { bg: string; icon: string }> = {
  blue: { bg: '#e0f2fe', icon: '#0284c7' },
  purple: { bg: '#f3e8ff', icon: '#9333ea' },
  teal: { bg: '#ccfbf1', icon: '#0d9488' },
  orange: { bg: '#ffedd5', icon: '#ea580c' },
  pink: { bg: '#fce7f3', icon: '#db2777' },
  green: { bg: '#dcfce7', icon: '#16a34a' }
};
---

<section class="why-qqenglish" id="why-qqenglish">
  <div class="container">
    <!-- Section Header -->
    <div class="section-header">
      <span class="section-eyebrow">Por que escolher a QQEnglish</span>
      <h2 class="section-title">
        Uma experiência de aprendizado
        <span class="title-highlight">incomparável</span>
      </h2>
      <p class="section-description">
        Descubra por que milhares de alunos em todo o mundo confiam na QQEnglish para alcançar a fluência.
      </p>
    </div>

    <!-- Features Grid -->
    <div class="features-grid">
      {features.map((feature, index) => (
        <article
          class="feature-card reveal"
          style={`--delay: ${index * 0.1}s; --accent-bg: ${accentColors[feature.accent].bg}; --accent-color: ${accentColors[feature.accent].icon}`}
        >
          <div class="card-icon">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <Fragment set:html={icons[feature.icon]} />
            </svg>
          </div>

          <h3 class="card-title">{feature.title}</h3>
          <p class="card-description">{feature.description}</p>

          <div class="card-decoration"></div>
        </article>
      ))}
    </div>

    <!-- Bottom CTA -->
    <div class="section-cta">
      <a href="#lead-form" class="cta-button">
        <span>Comece sua jornada agora</span>
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </div>

  <!-- Background decoration -->
  <div class="bg-decoration">
    <div class="bg-blob bg-blob--1"></div>
    <div class="bg-blob bg-blob--2"></div>
  </div>
</section>

<style>
  .why-qqenglish {
    position: relative;
    padding: var(--section-padding) 0;
    background: linear-gradient(180deg, var(--color-white) 0%, var(--color-gray-50) 100%);
    overflow: hidden;
  }

  /* Background decoration */
  .bg-decoration {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 0;
  }

  .bg-blob {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
  }

  .bg-blob--1 {
    width: 500px;
    height: 500px;
    background: var(--color-primary);
    opacity: 0.03;
    top: -200px;
    right: -200px;
  }

  .bg-blob--2 {
    width: 400px;
    height: 400px;
    background: var(--color-accent);
    opacity: 0.05;
    bottom: -150px;
    left: -150px;
  }

  .container {
    position: relative;
    z-index: 1;
  }

  /* Section Header */
  .section-header {
    text-align: center;
    max-width: 680px;
    margin: 0 auto 4rem;
  }

  .section-eyebrow {
    display: inline-block;
    font-family: var(--font-body);
    font-size: 0.8125rem;
    font-weight: 600;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
  }

  .section-title {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.75rem);
    font-weight: 700;
    color: var(--color-dark);
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  .title-highlight {
    position: relative;
    color: var(--color-primary);
  }

  .title-highlight::after {
    content: '';
    position: absolute;
    bottom: 2px;
    left: 0;
    right: 0;
    height: 8px;
    background: var(--color-accent);
    opacity: 0.3;
    z-index: -1;
    border-radius: 4px;
  }

  .section-description {
    font-family: var(--font-body);
    font-size: 1.0625rem;
    color: var(--color-gray-600);
    line-height: 1.7;
  }

  /* Features Grid */
  .features-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .features-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }
  }

  /* Feature Card */
  .feature-card {
    position: relative;
    padding: 2rem;
    background: white;
    border-radius: var(--radius-xl);
    border: 1px solid var(--color-gray-100);
    transition: all var(--transition-base);
    overflow: hidden;
  }

  .feature-card:hover {
    transform: translateY(-6px);
    box-shadow: var(--shadow-xl);
    border-color: transparent;
  }

  .feature-card:hover .card-decoration {
    opacity: 1;
  }

  .card-decoration {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--accent-color), var(--color-primary));
    opacity: 0;
    transition: opacity var(--transition-fast);
  }

  .card-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 56px;
    height: 56px;
    background: var(--accent-bg);
    color: var(--accent-color);
    border-radius: var(--radius-lg);
    margin-bottom: 1.25rem;
    transition: transform var(--transition-fast);
  }

  .feature-card:hover .card-icon {
    transform: scale(1.1);
  }

  .card-title {
    font-family: var(--font-display);
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-dark);
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }

  .card-description {
    font-family: var(--font-body);
    font-size: 0.9375rem;
    color: var(--color-gray-600);
    line-height: 1.65;
  }

  /* Reveal animation */
  .reveal {
    opacity: 0;
    transform: translateY(30px);
  }

  .why-qqenglish.is-visible .reveal,
  .reveal.is-visible {
    animation: reveal 0.6s var(--ease-out-expo) forwards;
    animation-delay: var(--delay, 0s);
  }

  @keyframes reveal {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Section CTA */
  .section-cta {
    text-align: center;
    margin-top: 3.5rem;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    font-family: var(--font-body);
    font-size: 1rem;
    font-weight: 600;
    color: white;
    background: var(--color-primary);
    border-radius: var(--radius-full);
    text-decoration: none;
    box-shadow: 0 4px 16px rgba(0, 85, 204, 0.25);
    transition: all var(--transition-fast);
  }

  .cta-button:hover {
    background: var(--color-primary-dark);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 85, 204, 0.35);
  }

  .cta-button svg {
    transition: transform var(--transition-fast);
  }

  .cta-button:hover svg {
    transform: translateX(4px);
  }
</style>

<script>
  // Intersection Observer for reveal animations
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('is-visible');
      }
    });
  }, observerOptions);

  document.querySelectorAll('.why-qqenglish .reveal').forEach(el => {
    observer.observe(el);
  });
</script>
