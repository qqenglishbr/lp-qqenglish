---
import Layout from "../../../shared/src/layouts/Layout.astro";
import Header from "../../../shared/src/components/Header.astro";
import Footer from "../../../shared/src/components/Footer.astro";
import CookieConsent from "../../../shared/src/components/CookieConsent.astro";
import Hero from "../components/Hero.astro";
import About from "../components/About.astro";
import Benefits from "../components/Benefits.astro";
import Curriculos from "../components/Curriculos.astro";
import LeadForm from "../components/LeadForm.astro";
import FAQ from "../components/FAQ.astro";

const title = "QQEnglish Business - Inglês Corporativo para Empresas";
const description = "Capacite sua equipe com inglês corporativo. Programas de Business English com aulas 1:1 ao vivo, 24h por dia. Global Business Skills, Business English e Callan for Business. Solicite uma proposta!";

const navItems = [
  { label: "Programas", href: "#curriculos" },
  { label: "Sobre", href: "#sobre" },
  { label: "FAQ", href: "#faq" }
];
---

<Layout title={title} description={description}>
  <Header navItems={navItems} ctaText="Solicitar Proposta" ctaHref="#lead-form" />
  <main>
    <Hero />
    <About />
    <Curriculos />
    <Benefits />
    <LeadForm />
    <FAQ />
  </main>
  <Footer />
  <CookieConsent />
</Layout>
